<div class="full-bg-overlay">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login-signup-box">
          <h2 class="login-signup-title">Create your account</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-signup-form" }) do |f| %>
          <%= f.input :role, collection: ['guest', 'host', 'both'], prompt: "Select your role" %>
          <%= f.input :email, required: true, placeholder: "Email", label: false %>
          <%= f.input :password, required: true, placeholder: "Password", label: false %>
          <%= f.input :password_confirmation, required: true, placeholder: "Confirm Password", label: false %>


            <%= f.button :submit, "Sign up", class: "btn btn-primary mt-3" %>
          <% end %>

          <div class="login-signup-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
