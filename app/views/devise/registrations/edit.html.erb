<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="login-signup-box">
        <h2 class="login-signup-title">Update your account</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "login-signup-form" }) do |f| %>
          <%= f.input :role, collection: ['guest', 'host', 'both'], prompt: "Update your role" %>
          <%= f.input :email, required: true %>
          <%= f.input :password, autocomplete: "new-password" %>
          <%= f.input :password_confirmation %>
          <%= f.input :current_password, hint: "We need your current password to confirm changes" %>

          <%= f.button :submit, "Update", class: "btn btn-primary mt-3" %>
        <% end %>

        <div class="login-signup-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
