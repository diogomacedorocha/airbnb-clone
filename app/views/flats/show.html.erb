<div>
  <% if @flat.photos.attached? %>
    <% @flat.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% end %>

  <h2><%= @flat.title %></h2>
  <h3><%= @flat.location %></h3>
  <h4>Flat description</h4>
  <p><%= @flat.description %></p>
  <p>Price per night: <%= @flat.price_per_night %>â‚¬</p>
</div>

<div>
  <% if user_signed_in? && current_user.role.in?(%w[guest both]) %>
    <%= link_to "Book it!", new_booking_path(flat_id: @flat.id), class: "btn btn-outline-primary" %>
  <% else %>
    <%= link_to "Sign in to book", new_user_session_path, class: "btn btn-outline-secondary" %>
  <% end %>
</div>
