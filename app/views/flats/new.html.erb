<div class="form-container">
  <h2>New Flat</h2>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :price_per_night %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit class: "form-button" %>
    <%= link_to "Back to flats", flats_path, class: "form-button second-button" %>
  <% end %>
</div>
