<div>
  <h2>New Flat</h2>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :price_per_night %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "btn btn-gradient" %>
    <%= link_to "Back to flats", flats_path, class: "btn btn-gradient" %>
  <% end %>
</div>