<div class="form-container">
  <%= simple_form_for(flat) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :location,
      input_html: { class: "d-none", data: { address_autocomplete_target: "address" } },
      wrapper_html: { data: {
        controller: "address-autocomplete",
        address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
      }}
    %>
    <%= f.input :price_per_night %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <div class="form-actions">
      <%= f.submit class: "form-button" %>
      <%= link_to "Back to flats", flats_path, class: "form-button second-button" %>
    </div>
  <% end %>
</div>
