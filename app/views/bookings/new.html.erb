<div class="form-container">
  <h1>New Booking</h1>

  <%= simple_form_for @booking, url: bookings_path do |f| %>
    <%= f.input :flat_id, as: :hidden, input_html: { value: @flat.id } %> <!-- âœ… flat_id now inside booking -->

    <div class="mb-3">
      <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
    </div>

    <div class="mb-3">
      <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
    </div>

    <%= f.button :submit, "Request Booking", class: "form-button" %>
  <% end %>
</div>
