<div class="flats-container">
  <h1 class="mb-4">My Bookings</h1>

  <% @bookings.each do |booking| %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to booking.flat.title, flat_path(booking.flat), class: "text-decoration-none" %>
        </h5>

        <p class="card-text mb-1">
          <strong>Dates:</strong>
          <% if booking.start_date && booking.end_date %>
            <%= booking.start_date.strftime("%b %d, %Y") %> &rarr;
            <%= booking.end_date.strftime("%b %d, %Y") %>
          <% else %>
            <em>Not set</em>
          <% end %>
        </p>

        <p class="card-text">
          <strong>Status:</strong>
          <span class="badge
            <%= case booking.status
              when 'pending' then 'bg-warning text-dark'
              when 'accepted' then 'bg-success'
              when 'declined' then 'bg-danger'
              else 'bg-secondary' end %>">
            <%= booking.status.capitalize %>
          </span>
        </p>
      </div>
    </div>
  <% end %>
</div>
