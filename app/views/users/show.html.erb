<div class="container my-5 text-center">
  <% if @user.avatar.attached? %>
    <%= image_tag(@user.avatar, width: 150, height: 150, crop: :thumb, gravity: :face, class:"shadow-sm rounded-circle") %>
  <% else %>
    <%= image_tag "default-avatar.png", class: "rounded-circle shadow-sm", size: "120x120" %>
  <% end %>

  <h2 class="mt-3"><%= @user.first_name.presence || "User" %>â€™s Profile</h2>

  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Phone:</strong> <%= @user.phone_number || "Not provided" %></p>
  <p><strong>Birthdate:</strong> <%= @user.birthdate&.strftime("%B %d, %Y") || "Not set" %></p>
  <p><strong>Role:</strong> <%= @user.role&.capitalize || "Not assigned" %></p>
  <p><strong>Joined:</strong> <%= @user.created_at.strftime("%B %Y") %></p>

  <%= link_to "Edit your profile", edit_user_path(@user), class: "form-button" %>
</div>
